@import 'stylus/*'

inputHeight = 55px
inputMargin = 8px

.wrapper
  color #fff
  width 100%
  height 100vh
  background linear-gradient(#FF6A3A,#000000)
  position relative
  overflow hidden
  display flex
  align-items center
  flex-direction column
  padding 20px 0
  box-sizing border-box
  .background
    width 120%
    position absolute
    top -10%
    left -10%
    height 120%
    background-image url(images/bg.png)
    background-size cover
    background-position 50% 50%
    filter blur(10px)
    opacity .2

.title
  flexCenter()
  flex-grow 2

form
  position relative
  z-index 3
  width 80%
  margin 0 auto
  max-width 450px
  min-width 300px
  flexCenter(column)
  flex-grow 1
  input 
    color #fff
  input[type="submit"]
    width 100%
    height inputHeight
    background rgba(#fff , 0)
    border-radius 50px
    border 2px solid rgba(#fff , .2)
    cursor pointer
    margin-top inputHeight - inputMargin * 3
    &:hover
      background rgba(#fff , .1)
  .input-wrapper
    width 100%
    height inputHeight
    margin inputMargin 0
    position relative
    svg.icon
      stroke rgba(#fff , .5)
      fill none
      top 0
      left 15px
      width 30px
      height 100%
      position absolute
    input 
      padding 0 20px 0 60px
      box-sizing border-box
      width 100%
      height 100%
      background rgba(#fff , .1)
      border-radius 50px
    ::placeholder
      color #fff

.conditions a
  color rgba(255,255,255,.5)
  z-index 2
  position relative
  font-size 13px
  &:hover
    color #fff