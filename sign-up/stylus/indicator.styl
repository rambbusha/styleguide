@import 'mixins'

bubleRadius = 5px
bigBubleRadius = 25px
lowOpacity = .3


.indicator
  width 95%
  margin 0 auto
  margin-top 20px
  max-width 450px
  @media screen and (min-width 550px)
    min-width 450px
  @media screen and (min-width 900px)
    min-width 700px
  ul 
    flexCenter()
    width 100%
    li.buble
      margin 10px
      width bigBubleRadius
      height bigBubleRadius
      border-radius 50%
      box-sizing border-box
      position relative
      flexCenter()
      .outer-buble
        border-radius 50%
        width 100%
        height 100%
        position absolute
        opacity 0
        transition .2s linear all
        border 1px solid white
        transform scale(.5)
      &.active .outer-buble
        transform scale(1) 
        transition-delay .5s
        opacity 1      
      .inner-buble
        width bubleRadius
        height bubleRadius
        border-radius 50%
        background-color #ffffff
    li.line
      position relative
      height 2px
      background-color rgba(#fff , lowOpacity)
      flex-grow 1
      .inner-line
        height 100%
        width 0%
        background-color white
        transition .5s .2s cubic-bezier(0.25, 0.82, 1, 1) all
        
li.buble.active > h4.buble-txt
  color #fff
  
h4.buble-txt
  display none
  @media screen and (min-width 500px)
    color rgba(#fff , lowOpacity)
    display block
    font-size: 8px;
    position: absolute;
    top: 142%;
    width: 150%;
    text-align: center;