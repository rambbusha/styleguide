flexCenter(direction=row , justifyContent = center)
  display flex
  align-items center
  justify-content justifyContent
  flex-direction direction

afterLine()
  content ''
  position absolute
  top -20px
  height 1px
  background-color rgba(#fff , .3)
  width 80%
  left 10%

fullAbsolute()
  position absolute
  top 0
  left 0
  width 100%
  height 100%
