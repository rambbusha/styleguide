@import 'stylus/*'

.app-wrapper
  max-width 100vw
  overflow hidden

.overview
  max-width 1100px
  margin 0 auto
  overflow hidden

.wrapper
  background-color darkorange
  transition navigationTransition linear transform
  .black-overlay 
      fullAbsolute()
      background rgba(0 , 0 , 0 , .3)
      z-index 100
      display none
    &.translated
      transform translateX(270px)
      .black-overlay
        display block

li.chart
  transition .3s linear all

li.chart.active
  transition-delay 1s

ul.charts
  transition .5s .5s linear all