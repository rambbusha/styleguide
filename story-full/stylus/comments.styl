@import 'mixins.styl'
@import 'vars.styl'

avatarRadius = 50px

.comment-avatar img 
	width avatarRadius
	height avatarRadius
	border-radius 50%
	object-fit cover
	@media screen and (min-width 550px)
		width 60px
		height 60px
		margin-right 10px

.comments-header
	background darkorange
	color white
	text-align center
	padding 70px 0
	margin-bottom 30px
	@media screen and (min-width 850px)
		.comments-header-max
			max-width 950px
			margin 0 auto
			padding 0 20px
			flexCenter(row,space-between)
	@media screen and (min-width 650px)
		padding 90px 0
		h1
			font-size 45px

ul.comments-filter
	margin 40px auto 0
	max-width 400px
	flexCenter(row,space-around)	
	@media screen and (min-width 850px)
		margin 0
		li
			margin 0 20px
	li
		opacity .5
		cursor pointer
		&.active
			opacity 1
			padding 7px 25px
			border-radius 50px
			border 1px solid rgba(white , .5)

.svg-fake-icon
	width 25px
	height 25px
	background #ff000036

li.comment 
	display flex
	padding 30px 10px
	border-bottom 1px solid rgba(0,0,0,.2)
	.comment-avatar
		margin-right 10px
		img
			box-shadow 0 0 10px #00000054
	.comments-no-avatar-wrapper
		flex-grow 1
	.comment-info
		flexCenter(row,space-between)
	.date 
		flexCenter()
		margin-right 5px
		@media screen and (min-width 450px)
			margin-right 10px
		span.time-gray
			color rgba(0,0,0,.5)
			margin-left 5px
	.likes 
		flexCenter()
	.comment-text 
		font-size 15px
		padding 15px 0
		line-height 20px
		max-width 350px

.comment-statistics
	flexCenter()
	font-size 12px
	@media screen and (min-width 700px)
		color rgb(128, 128, 128)
		font-weight bold
.write-comment
	padding 20px 10px
	flexCenter(row,space-between)
	max-width 700px
	margin 0 auto
	box-sizing border-box
	@media screen and (min-width 850px)
		max-width 850px
	.comment-avatar
		display none
		@media screen and (min-width 700px)
			display inline-block
			margin-right 10px
	form
		width 100%
		position relative
		flexCenter()
		.svg-fake-icon
			width 40px
			height 40px
			cursor pointer
	label.file-label
		width 40px
		height 40px
		@media screen and (min-width 700px)
			position absolute
			left 10px
	input[type="text"]
		flex-grow 1
		height 40px
		font-size 15px
		margin 0 20px
		&::placeholder
			color rgb(177, 177, 177)
		@media screen and (min-width 700px)
			border 1px solid orange 
			height 50px
			border-radius 50px
			padding-left 60px
			margin 0 20px 0 0
	input[type="file"]
		opacity 0
		width: .1px
		height .1px
		overflow hidden
		position absolute
		z-index -1
	.submit-buttons
		height 40px
		position relative
		@media screen and (min-width 700px)
			height 50px
		input.submit-small
			width 40px
			height 40px
			@media screen and (min-width 700px)
				display none
		input.submit-big
			display none
			@media screen and (min-width 700px)
				display inline-block
				color white
				background orange 
				padding 0 40px 0 70px
				height 100%
				box-shadow 0px 11px 25px rgba(0,0,0,.2)
				border-radius 50px
				cursor pointer
				font-size 15px
	.send-icon
		position absolute
		top 0
		right 0
		width 40px
		height 40px
		@media screen and (min-width 700px)
			left 15px
			top 5px
			right unset
ul.comments
	margin 0 auto
	max-width 700px
	@media screen and (min-width 850px)
		max-width 850px

.load-more
	display none
	@media screen and (min-width 650px)
		text-align center
		display block
		padding 25px 0
		margin-top 30px
		font-weight bold		
		color rgb(177, 177, 177)
		font-size 13px
	@media screen and (min-width 850px)
		padding 30px 0
/* FOOOOTER */

.comments-footer
	display none
	@media screen and (min-width 650px)
		text-align center
		display block
		padding 40px 0
		margin-top 30px
		background-color rgb(242, 242, 242)
		color rgb(177, 177, 177)
		font-size 15px