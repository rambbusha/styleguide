@import 'mixins.styl'
@import 'vars.styl'

.nav-bar-wrapper svg.search
  stroke white
  fill none
  cursor pointer

.wrapper
  padding-top 65px
  svg.article-info-icon
    fill none 
    stroke black
    width 25px
    height 25px
  .article-infos
    z-index 2
    position relative
    display flex
    flex-direction column
    justify-content flex-end
    padding: 20px 15px 17px
    box-sizing border-box
    @media screen and (min-width : 730px)
      padding: 20px 30px 17px
  
  h2.article-title
    font-size 17px
    line-height 24px
    margin-bottom 15px
    @media screen and (min-width : 600px)
      font-size 20px
      line-height 27px
      flex-grow 1
      margin 0
      flexCenter()
      text-align center
      max-width 350px
      align-self center
  li.article
    box-sizing: border-box
    border-top 1px solid #eaeaea
    @media screen and (min-width : 600px)
      &:nth-child(even) .article-infos:after
        arrow(left , 15px , #fff)
      &:nth-child(odd) .article-infos:after
        arrow(right , 15px , #fff , true)
      &:nth-child(2) .article-bg
        backgroundImage('images/img3.png')
      &:nth-child(3) .article-bg
        backgroundImage('images/img4.png')
        background-position top
      &:nth-child(4) .article-bg
        backgroundImage('images/img2.png')
      border none
      height 300px
      display flex
      div
        flex-grow 1
        width 50%
      &:nth-child(even) .article-bg
        order 1
      .article-bg
        height 100%
        background rgba(#000 , .1)
      
    &:nth-child(1)
      border none
      height 50vh
      min-height 300px
      position relative
      color #fff
      display flex
      @media screen and (min-width 600px)
        h2
          font-size 30px
          margin-bottom 20px
          line-height 40px
          align-items flex-end
          text-align left
          max-width 500px
          align-self initial 
      svg 
        stroke rgba(#fff , .7)
      .article-bg
        fullAbsolute()
        backgroundImage('images/img1.png' , right)

ul.articles-more-infos
  display flex
  align-items center
  font-size 12px
  @media screen and (min-width 600px)
    font-size 10px
  li.source,
  li.time
    margin-right 10px
    flexCenter()
  li.category
    flex-grow 1
    text-align right
    a
      position relative
      &:after
        content ''
        width 100%
        height 1px
        position absolute
        background currentColor
        opacity .5
        left 0
        bottom -5px