@import 'mixins.styl'
@import 'vars.styl'

svgRadius = 25px

.nav-bar-wrapper
  display none
  padding 25px 20px 10px
  box-sizing border-box
  z-index 10
  @media screen and (min-width 10px)
    flexCenter(row , space-between)
    width 100%
    background-color orange
    position absolute
    top 0
    left 0
    .close
      width 30px
      height 30px
      position relative
      cursor pointer
      span.close-line
        width 30px
        height 2px
        top 14px
        background #fff
        position absolute
        &:nth-child(2)
          transform rotate(45deg)
        &:nth-child(1)
          transform rotate(-45deg)
    svg 
      fill white
      width svgRadius
      height svgRadius
    .burger
      cursor pointer
      position relative
      width 30px
      height 30px
      for num in 0 1 2
        span:nth-child({num + 1})
          top unit( (9 * num) + 5 , 'px')
      .burger-line,
      .burger-line-small
        position absolute
        width 25px
        height 2px 
        background #fff
      .burger-line-small
        width 15px

