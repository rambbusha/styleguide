@import 'mixins.styl'
@import 'vars.styl'

.fonts-settings-wrapper
  position absolute
  top 70px
  display flex 
  width 100%
  left 0
  background-color darkorange
  color white
  z-index 3
  transition .3s cubic-bezier(0.13, 0.71, 0.18, 0.9) transform
  transform translateY(-120%)
  &.down
    transform translateY(0%)
  @media screen and (min-width 950px)
    width 400px
    background-color orange
    right 15px
    top 80px
    left unset

svg 
  stroke white 

ul.fonts-settings 
  width 100%
  padding 10px 0
  position relative
  @media screen and (min-width 650px) and (max-width 950px)
    display flex
    padding 30px 0
  @media screen and (min-width 950px)
    &:after
      content ''
      position absolute
      top -10px
      left 51%
      width 0
      height 0
      border-left 10px #ff000000 solid
      border-right 10px solid transparent
      border-bottom 10px solid #f96332
  li
    padding 30px 10px
    max-width 350px
    margin 0 auto
    flex-basis 33.3%
    @media screen and (min-width 650px) and (max-width 950px)
      padding 5px 10px
    &.typeface
      padding 38px 10px
      border-top 1px solid rgba(white , .5)
      border-bottom 1px solid rgba(white , .5)
      flexCenter(row,space-between)
      @media screen and (min-width 650px) and (max-width 950px)
        order -1
        border none
        flex-direction column
        padding 20px 10px
      p:nth-child(1)
        opacity .5
        @media screen and (min-width 650px) and (max-width 950px)
          margin-bottom 10px
    &.font-size
      flexCenter(row,space-between)
      @media screen and (min-width 650px) and (max-width 950px)
        justify-content space-evenly
    &.luminosity
      flexCenter(row,space-around)
      position relative
      @media screen and (min-width 650px) and (max-width 950px)
        border-left 1px solid rgba(white , .5)
        border-right 1px solid rgba(white , .5)
        justify-content center
        .sun
          margin-right 20px
      &:after
        content ''
        position absolute
        top 20%
        left 50%
        width 1px
        background-color rgba(255,255,255,.5)
        height 60%
        @media screen and (min-width 650px) and (max-width 950px)
          display none
      div
        cursor pointer
      svg 
        width 40px
        height 40px
        background-color rgba(white,.3)
        padding 20px
        border-radius 50%
        @media screen and (min-width 650px) and (max-width 950px)
          width 35px
          height 35px
          padding 10px
      .active svg 
        background white
        stroke darkorange
        box-shadow 0 0 10px rgba(#000,.2)
    
.font-size .small-size svg 
  width 20px
  height 20px

.font-size .big-size svg 
  width 35px
  height 35px




.range-holder
  max-width 200px
  flex-grow 1
  flexCenter()
  @media screen and (min-width 650px) and (max-width 950px)
    max-width 100px

input[type=range] {
  -webkit-appearance: none; 
  width: 100%; 
  background: transparent; 
}

input[type=range]::-webkit-slider-thumb {
  -webkit-appearance: none;
}

input[type=range]:focus {
  outline: none; 
}

input[type=range]::-ms-track {
  width: 100%;
  cursor: pointer;

  background: transparent; 
  border-color: transparent;
  color: transparent;
}


input[type=range]::-webkit-slider-thumb {
  -webkit-appearance: none;
  border: none;
  height: 20px;
  width: 20px;
  border-radius: 50%;
  background: #ffffff;
  cursor: pointer;
  margin-top: -10px;
}


input[type=range]::-moz-range-thumb {
  border: none;
  height: 35px;
  width: 35px;
  border-radius: 50%;
  background: #ffffff;
  cursor: pointer;
}


input[type=range]::-ms-thumb {
  border: none;
  height: 35px;
  width: 35px;
  border-radius: 50%;
  background: #ffffff;
  cursor: pointer;
}



input[type=range]::-webkit-slider-runnable-track {
  width: 100px;
  height: 2px;
  cursor: pointer;
  background: rgba(white,.5);
  border-radius: 50px;
}

input[type=range]:focus::-webkit-slider-runnable-track {
  background: rgba(white,.7)  ;
}

input[type=range]::-moz-range-track {
  width: 100%;
  height: 2px;
  cursor: pointer;
  background: rgba(white,.5);
  border-radius: 50px;
}

input[type=range]::-ms-track {
  width: 100%;
  height: 2px;
  cursor: pointer;
  background: rgba(white,.5);
  border-radius: 50px;
}
input[type=range]::-ms-fill-lower {
  background: white;
}
input[type=range]::-ms-fill-upper {
  background: white;
  border-radius: 50px;
}
