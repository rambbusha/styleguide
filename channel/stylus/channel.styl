@import 'mixins.styl'
@import 'vars.styl'


img 
  width 100px

.channel 
  min-height 100vh
  padding-top 60px


.channel-header
  backgroundImage('images/header.jpg')
  color white
  height 50vw
  min-height 220px
  max-height 350px
  padding 20px 0
  box-sizing border-box
  flexCenter(column,space-evenly)
  @media screen and (min-width 550px)
    height 60vw
    max-height 400px
    min-height 300px
    h2.channel-title
      flex-grow 1
      display flex
      align-items flex-end
      padding-bottom 20px
      font-size 30px
      @media screen and (min-width 950px)
        font-size 40px
    .followers
      text-align center
      flex-grow 1
      flexCenter(column,flex-end)
  @media screen and (min-width 950px)
    max-height 450px
  .followers-list
    display none
    @media screen and (min-width 550px)
      display flex
      margin-top 15px
      li.follower
        margin 0 5px
        width 30px
        height 30px
        opacity .8
        &:hover
          opacity 1
      a 
        width 100%
        height 100%
        display block
        img
          width 100%
          height 100%
          object-fit cover
          border-radius 50%
  .follow-button
    color orange 
    background-color white
    border-radius 50px
    padding 10px 30px
    font-size 15px
    font-weight bold
    cursor pointer
    &:hover
      transform translateY(-2px)
  h4 
    font-size 15px


.channel-card
  position relative
  @media screen and (min-width 600px)
    display flex
    flex-direction column
    width 260px
    flex-grow 1
    &:nth-child(even) .channel-card-image
      order -1
    &:nth-child(odd) .channel-card-info:after
      content ''
      position absolute
      bottom -10px
      left calc(50% - 5px)
      width 0 
      height 0
      border-top 10px solid white 
      border-left 10px solid transparent 
      border-right 10px solid transparent
    &:nth-child(even) .channel-card-info:after
      content ''
      position absolute
      top -10px
      left calc(50% - 5px)
      width 0 
      height 0
      border-bottom 10px solid white 
      border-left 10px solid transparent 
      border-right 10px solid transparent
    div
      height 40vw
      max-height 350px
  .channel-card-image
    display none
    @media screen and (min-width 600px)
      display block
      img
        width 100%
        height 100%
        object-fit cover
        vertical-align -webkit-baseline-middle
  .channel-card-info
    position relative
    padding 20px 15px 15px
    border-bottom 1px solid rgba(black , .2)
    max-width 450px
    margin 0 auto
    @media screen and (min-width 600px)
      flexCenter(column, space-between)
      text-align center
      box-sizing border-box
  h2.channel-card-title
    font-size 20px
    @media screen and (min-width 600px)
      flex-grow 1
      display flex
      max-width 350px
      align-items center
  .posted-info 
    display flex
    margin 10px 0
    @media screen and (min-width 600px)
      width 100%
      justify-content space-between
    li 
      flexCenter()
      margin-right 20px
      font-size 13px
    svg 
      width 25px
      margin-right 2px
      height 25px
      stroke rgba(black, .5)

@media screen and (min-width 600px)
  .channel-cards 
    display flex
    flex-wrap wrap