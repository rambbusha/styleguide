@import 'stylus/*'

.app-wrapper
  max-width 100vw
  overflow hidden

.wrapper
  transition navigationTransition linear transform
  .black-overlay 
      fullAbsolute()
      background rgba(0 , 0 , 0 , .3)
      z-index 100
      display none
    &.translated
      transform translateX(270px)
      .black-overlay
        display block