@import 'vars.styl'
@import 'mixins.styl'

mobileLiWidth = 80px
mobileActiveLiWidth = 130px

.mobile-walk-through
  width 100%
  min-height 100vh
  background-color orange
  position fixed
  top 0
  left 0
  flexCenter()
  z-index 400
  @media screen and (min-width 600px)
    display none

.mobile-walk-through-wrapper
  max-height 500px
  height 100vh
  width 100%
  color white
  text-align center
  display flex
  box-sizing border-box
  justify-content space-between
  flex-direction column
  p.steps-count
    font-weight bold
  .steps-info-wrapper
    max-width 300px
    overflow hidden
    margin 0 auto
    flex-grow 1
    display flex
  h2
    font-size 15px
    max-width 200px
    margin 0 auto
    flex-grow 1
  ul 
    white-space nowrap
    padding-left mobileLiWidth + 5px
    display flex
    align-items center
  li
    display inline-block
    white-space normal
    width mobileLiWidth
    font-size 10px
    margin 0 5px
    opacity .5
    svg 
      width 80px
    &.active
      margin 0
      opacity 1
      width mobileActiveLiWidth
      svg 
        width mobileActiveLiWidth
  svg 
    background transparent
    border-radius 0
    width 100px

.progress-indicator
  width 200px
  height 2px
  background-color rgba(white , .5)
  margin 0 auto
  .progress-indicator-inner
    width 0
    height 100%
    background-color white
    transition .2s cubic-bezier(0, 0, 0.19, 0.91) all


/* tootlip */
.tooltip
  width 200px
  background orange 
  color white
  position absolute
  flexCenter(column)
  font-size 15px
  text-align center
  padding 30px
  display none
  &.active
    display flex
  .controlls
    display flex
    justify-content space-between
    width 90%
  .tip
    margin 20px 0
  a
    color rgba(white , .5)
    transition .2s linear all
    &:hover
      color white
  .tooltip-icon
    width 90px
    height 90px
    background white
    border-radius 50%
  .double-circle
    position absolute
    span.circle
      border-radius 50%
      background rgba(white , .3)
      position absolute
      &:nth-child(1)
        width 120px
        height 120px
      &:nth-child(2)
        width 75px
        height 75px

.tooltip 
  .double-circle span.circle
    transform scale(0)
  &.active
    .double-circle span.circle
      animation pop .2s cubic-bezier(0, 0, 0.18, .49) forwards
      &:nth-child(2)
        animation-delay: .2s

@keyframes pop 
  to
    transform scale(1)

